<div>
  <%= f.email_field :email, :placeholder => " Email", class: 'span3', :autofocus => true %>

  <%= f.text_field :first, :placeholder => "First Name", class: 'span3' %>

  <%= f.text_field :last, :placeholder => "Last Name", class: 'span3' %>

  <%= f.hidden_field :role, value: 'admin' %>

  <%= f.password_field :password, :placeholder => "Password", class: 'span3' %>

  <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", class: 'span3' %>
</div>