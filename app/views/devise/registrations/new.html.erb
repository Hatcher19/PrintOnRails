<h2>Account Sign Up</h2>

<%= fields_for :account do |builder| %>
	<%= builder.text_field :company, :placeholder => "Company Name", class: 'span3' %>
<% end %>

<%= form_for :admin_users do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :email, :placeholder => " Email", class: 'span3' %>
  <%= f.text_field :password, :placeholder => " Password", class: 'span3' %>
  <%= f.text_field :password_confirmation, :placeholder => " Password Confirmation", class: 'span3' %>
  <div class='btn btn-primary'><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>