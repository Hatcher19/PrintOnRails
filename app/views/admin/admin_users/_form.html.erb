<%=
form.has_many :admin_users do |admin_user|  
	admin_user.input :first
	admin_user.input :last
	admin_user.input :email 
	admin_user.input :phone
	admin_user.input :role, :collection => AdminUser::ROLES, :member_label => :humanize
	if admin_user.object.new_record? 
		admin_user.inputs "Password" do 
			admin_user.input :password, :required => true
			admin_user.input :password_confirmation, :label => "Password Confirmation", :required => true 
		end
	end
end 
%>