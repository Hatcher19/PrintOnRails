<%=
active_admin_form_for [:admin, @admin_user], html: { multipart: true } do |f|
	f.inputs "User Information" do
		f.input :first
		f.input :last 
		f.input :email 
		f.input :phone_number, :hint => 'Ex: 1234567890'
		f.input :role, :collection => AdminUser::ROLES, :member_label => :humanize
	end 
	if f.object.new_record? 
		f.inputs "Password" do 
			f.input :password, :required => true
			f.input :password_confirmation, :label => "Password Confirmation", :required => true 
			f.input :account_id, :as => :hidden, :value => current_admin_user.account
		end
	end
	f.buttons
end
%>