<%=
	if resource.new_record?
		form.has_many :artworks do |artwork| 
		  artwork.input :file, :wrapper_html => { :class => 'art-row' }
		  artwork.input :location_id, as: :select, :collection => Location.all, :wrapper_html => { :class => 'art-row' }, label: "Location*"
		  artwork.input :color, :wrapper_html => { :class => 'art-row' }, label: "Color(s)"
		end
	else
		form.has_many :artworks do |artwork| 
			artwork.input :file, :hint => artwork.template.image_tag(artwork.object.file.url, :height => '100'), :wrapper_html => { :class => 'art-row' }
			artwork.input :location_id, as: :select, :collection => Location.all, :wrapper_html => { :class => 'art-row' }, label: "Location*"
			artwork.input :color, :wrapper_html => { :class => 'art-row' }, label: "Color(s)"
	    artwork.input :_destroy, :as=>:boolean, :required => false, label: "Remove Art", :wrapper_html => { :class => 'bool' }
	  end
  end
%>